<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập tên sách"
        android:textSize="18sp"
        android:textColor="#000000"
        android:id="@+id/edtTensach"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập tên Tác giả"
        android:textSize="18sp"
        android:textColor="#000000"
        android:id="@+id/edtTentg"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập tên nhà XB"
        android:textSize="18sp"
        android:textColor="#000000"
        android:id="@+id/edtNhaxb"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập Năm xuất bản"
        android:textSize="18sp"
        android:textColor="#000000"
        android:id="@+id/edtNam"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập mới"
            android:id="@+id/btnNhapMoi"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:id="@+id/btnLuu"/>

    </LinearLayout>


</LinearLayout>